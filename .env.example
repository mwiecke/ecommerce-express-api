# Server configuration
PORT=3000
NODE_ENV=development

# Authentication secrets
# You should generate strong random strings for these
ACCESS_TOKEN_SECRET=replace_with_strong_random_string
REFRESH_TOKEN_SECRET=replace_with_different_strong_random_string
FORGOT_TOKEN_SECRET=replace_with_another_strong_random_string

# OAuth credentials (for Google authentication)
CLIENT_ID=your_google_client_id_here
CLIENT_SECRET=your_google_client_secret_here

# Email configuration (for password reset, notifications)
MY_EMAIL=your_notification_email@example.com
MY_EMAIL_PASSWORD=your_email_app_password

# Stripe payment integration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Database connection
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecommerce_db
DB_PASSWORD=your_database_password
DB_NAME=ecommerce_db

# Redis cache connection
REDIS_URL=redis://localhost:6379

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# CORS allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com